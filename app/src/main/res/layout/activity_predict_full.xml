<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    android:orientation="vertical"
    android:paddingHorizontal="15dp"
    android:paddingBottom="20dp">

    <com.qmuiteam.qmui.widget.QMUITopBarLayout
        android:id="@+id/topBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.cardview.widget.CardView
        android:id="@+id/map_container"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        app:cardCornerRadius="6dp"
        app:cardElevation="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <com.amap.api.maps.MapView
            android:id="@+id/map"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <ImageView
            android:id="@+id/full_screen"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_gravity="end"
            android:padding="10dp"
            android:src="@mipmap/full_screen" />

        <ImageView
            android:id="@+id/temp"
            android:layout_width="55dp"
            android:layout_height="60dp"
            android:layout_gravity="end|bottom"
            android:paddingVertical="10dp"
            android:paddingStart="5dp"
            android:paddingEnd="10dp"
            android:src="@mipmap/tab_temperature" />

        <ImageView
            android:id="@+id/car"
            android:layout_width="55dp"
            android:layout_height="60dp"
            android:layout_gravity="end|bottom"
            android:layout_marginEnd="60dp"
            android:paddingVertical="10dp"
            android:paddingStart="10dp"
            android:paddingEnd="5dp"
            android:src="@mipmap/tab_car" />

    </androidx.cardview.widget.CardView>

    <com.noober.background.view.BLConstraintLayout
        android:id="@+id/charge_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="20dp"
        android:padding="15dp"
        app:bl_corners_radius="5dp"
        app:bl_solid_color="@color/backgroundLite">

        <ImageView
            android:id="@+id/icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:src="@mipmap/charging_station"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="5dp"
            android:text="---"
            android:textColor="#e1fbfc"
            android:textSize="16dp"
            app:layout_constraintLeft_toRightOf="@id/icon"
            app:layout_constraintRight_toRightOf="parent" />

        <TextView
            android:id="@+id/address"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:text="---"
            android:textColor="#ffd3d3d3"
            android:textSize="14dp"
            app:layout_constraintLeft_toLeftOf="@id/name"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/name" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginStart="26dp"
            android:layout_marginTop="10dp"
            android:background="#6C6C6C"
            app:layout_constraintTop_toBottomOf="@id/address" />

        <TextView
            android:id="@+id/price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="---"
            android:textColor="#fff44b57"
            android:textSize="16dp"
            app:layout_constraintLeft_toLeftOf="@id/address"
            app:layout_constraintTop_toBottomOf="@id/address" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:text="元/度"
            android:textColor="#ffa6a6a6"
            android:textSize="12dp"
            app:layout_constraintBaseline_toBaselineOf="@id/price"
            app:layout_constraintLeft_toRightOf="@id/price" />
    </com.noober.background.view.BLConstraintLayout>

    <com.noober.background.view.BLButton
        android:id="@+id/nav"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:text="导航"
        android:textColor="#fff"
        app:bl_corners_radius="4dp"
        app:bl_pressed_drawable="#00f4ff"
        app:bl_stroke_color="#00f4ff"
        app:bl_stroke_width="1dp"
        app:bl_unPressed_drawable="#0d9fa6" />
</LinearLayout>