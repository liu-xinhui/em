<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    android:orientation="vertical">

    <com.qmuiteam.qmui.widget.QMUITopBarLayout
        android:id="@+id/topBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingHorizontal="15dp"
            android:paddingBottom="20dp">

            <com.powershare.etm.component.MapContainer
                android:id="@+id/map_container"
                android:layout_width="match_parent"
                android:layout_height="260dp"
                app:cardCornerRadius="6dp"
                app:cardElevation="0dp"
                app:layout_constraintTop_toTopOf="parent">

                <com.amap.api.maps.MapView
                    android:id="@+id/map"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />
            </com.powershare.etm.component.MapContainer>

            <ImageView
                android:id="@+id/full_screen"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:padding="10dp"
                android:src="@mipmap/full_screen"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="@id/map_container" />

            <ImageView
                android:id="@+id/temp"
                android:layout_width="55dp"
                android:layout_height="60dp"
                android:paddingVertical="10dp"
                android:paddingStart="5dp"
                android:paddingEnd="10dp"
                android:src="@mipmap/tab_temperature"
                android:visibility="gone"
                app:layout_constraintBottom_toBottomOf="@id/map_container"
                app:layout_constraintRight_toRightOf="parent" />

            <ImageView
                android:id="@+id/car"
                android:layout_width="55dp"
                android:layout_height="60dp"
                android:paddingVertical="10dp"
                android:paddingStart="10dp"
                android:paddingEnd="5dp"
                android:src="@mipmap/tab_car"
                android:visibility="gone"
                app:layout_constraintBottom_toBottomOf="@id/map_container"
                app:layout_constraintRight_toLeftOf="@id/temp" />

            <com.noober.background.view.BLTextView
                android:id="@+id/notice"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_marginTop="15dp"
                android:gravity="center"
                android:paddingHorizontal="15dp"
                android:text="~"
                android:textColor="@color/colorAccent"
                app:bl_corners_radius="20dp"
                app:bl_solid_color="@color/black"
                app:layout_constraintTop_toBottomOf="@id/map_container" />

            <ImageView
                android:id="@+id/power_start"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="40dp"
                android:layout_marginTop="15dp"
                android:src="@mipmap/power_start"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@id/notice" />

            <ImageView
                android:id="@+id/power_end"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="40dp"
                android:src="@mipmap/power_end"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="@id/power_start" />

            <com.noober.background.view.BLView
                android:id="@+id/divider"
                android:layout_width="0dp"
                android:layout_height="3dp"
                android:layout_marginStart="5dp"
                android:layout_marginEnd="2dp"
                app:bl_stroke_color="@color/textD3"
                app:bl_stroke_dashGap="4dp"
                app:bl_stroke_dashWidth="4dp"
                app:bl_stroke_position="top"
                app:bl_stroke_width="1dp"
                app:layout_constraintBottom_toBottomOf="@id/power_start"
                app:layout_constraintLeft_toRightOf="@id/power_start"
                app:layout_constraintRight_toLeftOf="@id/power_end"
                app:layout_constraintTop_toTopOf="@id/power_start" />

            <TextView
                android:id="@+id/power_consumption"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="1dp"
                android:text="行程消耗--电量"
                android:textColor="#fff44b57"
                android:textSize="12dp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@id/divider" />

            <TextView
                android:id="@+id/power_value_start"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="11dp"
                android:text="--"
                android:textColor="#ffe1fbfc"
                android:textSize="14dp"
                app:layout_constraintLeft_toLeftOf="@id/power_start"
                app:layout_constraintRight_toRightOf="@id/power_start"
                app:layout_constraintTop_toBottomOf="@id/power_start" />

            <TextView
                android:id="@+id/power_value_end"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="11dp"
                android:text="--"
                android:textColor="#ffe1fbfc"
                android:textSize="14dp"
                app:layout_constraintLeft_toLeftOf="@id/power_end"
                app:layout_constraintRight_toRightOf="@id/power_end"
                app:layout_constraintTop_toBottomOf="@id/power_end" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="行程初始电量"
                android:textColor="#ffa6a6a6"
                android:textSize="12dp"
                app:layout_constraintLeft_toLeftOf="@id/power_start"
                app:layout_constraintRight_toRightOf="@id/power_start"
                app:layout_constraintTop_toBottomOf="@id/power_value_start" />

            <TextView
                android:id="@+id/remain_power_tip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="到达时剩余电量"
                android:textColor="#ffa6a6a6"
                android:textSize="12dp"
                app:layout_constraintLeft_toLeftOf="@id/power_end"
                app:layout_constraintRight_toRightOf="@id/power_end"
                app:layout_constraintTop_toBottomOf="@id/power_value_end" />

            <GridLayout
                android:id="@+id/info_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:columnCount="2"
                android:orientation="horizontal"
                android:rowCount="3"
                app:layout_constraintTop_toBottomOf="@id/remain_power_tip" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>
</LinearLayout>
