<?xml version="1.0" encoding="utf-8"?>
<com.noober.background.view.BLConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingHorizontal="20dp"
    android:paddingTop="7dp"
    android:paddingBottom="20dp"
    app:bl_corners_radius="5dp"
    app:bl_solid_color="@color/backgroundLite"
    app:bl_stroke_color="@color/white"
    app:bl_stroke_width="1dp">

    <TextView
        android:id="@+id/content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="15dp"
        android:gravity="center"
        android:padding="15dp"
        android:textColor="#e1fbfc"
        android:textSize="16dp"
        app:layout_constraintBottom_toTopOf="@id/sure"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.noober.background.view.BLButton
        android:id="@+id/cancel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingHorizontal="20dp"
        android:paddingVertical="7dp"
        android:text="取消"
        android:textColor="#fff"
        app:bl_corners_radius="4dp"
        app:bl_pressed_drawable="#00f4ff"
        app:bl_stroke_color="#00f4ff"
        app:bl_stroke_width="1dp"
        app:bl_unPressed_drawable="#1d3537"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/sure" />

    <com.noober.background.view.BLButton
        android:id="@+id/sure"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:paddingHorizontal="20dp"
        android:paddingVertical="7dp"
        android:text="确定"
        android:textColor="#fff"
        app:bl_corners_radius="4dp"
        app:bl_pressed_drawable="#00f4ff"
        app:bl_stroke_color="#00f4ff"
        app:bl_stroke_width="1dp"
        app:bl_unPressed_drawable="#0d9fa6"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintLeft_toRightOf="@id/cancel"
        app:layout_constraintRight_toRightOf="parent" />

</com.noober.background.view.BLConstraintLayout>
