<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingHorizontal="16dp"
        android:paddingBottom="25dp"
        tools:context=".ui.tab2.Tab2Fragment">

        <com.powershare.etm.component.DialProgress
            android:id="@+id/progress"
            android:layout_width="200dp"
            android:layout_height="200dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/power_retain"
            app:layout_constraintBottom_toBottomOf="@id/progress"
            app:layout_constraintLeft_toLeftOf="@id/progress"
            app:layout_constraintRight_toRightOf="@id/progress" />

        <com.noober.background.view.BLTextView
            android:id="@+id/notice"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_marginTop="15dp"
            android:gravity="center"
            android:paddingHorizontal="15dp"
            android:text="记录进行中~"
            android:textColor="@color/colorAccent"
            app:bl_corners_radius="20dp"
            app:bl_solid_color="@color/black"
            app:layout_constraintTop_toBottomOf="@id/progress" />

        <GridLayout
            android:id="@+id/info_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:columnCount="2"
            android:orientation="horizontal"
            android:rowCount="2"
            app:layout_constraintTop_toBottomOf="@id/notice" />

        <com.noober.background.view.BLButton
            android:id="@+id/go_detail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="查看详情记录"
            android:textColor="#fff"
            android:visibility="gone"
            app:bl_corners_radius="4dp"
            app:bl_pressed_drawable="#00f4ff"
            app:bl_stroke_color="#00f4ff"
            app:bl_stroke_width="1dp"
            app:bl_unPressed_drawable="#0d9fa6"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/info_container" />

        <com.noober.background.view.BLButton
            android:id="@+id/finish_track"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="结束追踪"
            android:textColor="#fff"
            app:bl_corners_radius="4dp"
            app:bl_pressed_drawable="#00f4ff"
            app:bl_stroke_color="#00f4ff"
            app:bl_stroke_width="1dp"
            app:bl_unPressed_drawable="#0d9fa6"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/info_container" />

        <com.noober.background.view.BLButton
            android:id="@+id/cancel_track"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="放弃记录"
            android:textColor="#fff"
            app:bl_corners_radius="4dp"
            app:bl_pressed_drawable="#00f4ff"
            app:bl_stroke_color="#00f4ff"
            app:bl_stroke_width="1dp"
            app:bl_unPressed_drawable="#1d3537"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/finish_track" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>